{
	"$schema": "https://turbo.build/schema.json",
	"globalEnv": [
		"DB_NAME",
		"DB_PASSWORD",
		"DB_PORT",
		"DB_USER",
		"ENV",
		"PORT",
		"REDIS_HOST",
		"REDIS_PORT"
	],
	"tasks": {
		"dev": {
			"persistent": true,
			"cache": true
		},
		"build": {
			"dependsOn": ["^build"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		}
	}
}
